<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/layout_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/ll_btn"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/ll_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/ll_btn"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="10dip"
        android:paddingLeft="18dip"
        android:paddingRight="18dip" >



        <LinearLayout
            android:id="@+id/layout_look"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:layout_width="fill_parent"
            android:visibility="gone"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:layout_marginBottom="8dip"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="12dip"
                android:layout_width="wrap_content"
                android:background="@drawable/ic_drawer_explore_normal"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF808080"
                android:text="随便看看"/>


        </LinearLayout>



<RelativeLayout
    android:layout_gravity="center_horizontal"
    android:layout_width="fill_parent"
    android:gravity="center_vertical"
    android:layout_marginBottom="8dip"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_qq"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_drawer_oauth_qq_normal"
            android:layout_marginRight="12dip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ登录"/>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_guide_01"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="观而思-知乎漫游指南"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        />


    <LinearLayout
        android:layout_alignParentRight="true"
        android:id="@+id/layout_sina"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_drawer_oauth_sina_normal"
            android:layout_marginRight="12dip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微博登录"/>

    </LinearLayout>
</RelativeLayout>

        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/im_page_01"
            android:layout_marginRight="3dip"
            android:background="@drawable/page_press"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/im_page_02"
            android:background="@drawable/page_press"
            android:layout_marginRight="3dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/im_page_03"
                    android:background="@drawable/page_press"
                    android:layout_marginRight="3dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/im_page_04"
                    android:background="@drawable/page_press"
                    android:layout_marginRight="3dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/im_page_05"
                    android:background="@drawable/page_press"
                    android:layout_marginRight="3dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/im_page_06"
                    android:background="@drawable/page_press"
                    android:layout_marginRight="3dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
</LinearLayout>
            <ImageView
                android:id="@+id/im_pagepress_01"
                android:background="@drawable/page_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="20dip"
        android:paddingLeft="18dip"
        android:paddingRight="18dip" >

        <Button
            android:id="@+id/btn_login"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:textColor="@android:color/white"
            android:background="#ff2681FF"
            android:layout_weight="1"
            android:text="登录" />

        <View
            android:layout_width="20dip"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:textColor="#FF808080"
            android:background="@android:color/white"
            android:layout_weight="1"
            android:text="注册"/>
    </LinearLayout>

</RelativeLayout>